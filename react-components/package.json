{
  "name": "react-components",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prepare": "cd .. && husky install react-components/.husky"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "@types/node": "^20.5.7",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "eslint": "^8.48.0",
    "eslint-config-next": "^13.5.6",
    "next": "^14.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.2",
    "sass": "^1.66.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "next-redux-wrapper": "^8.1.0",
    "prettier": "^3.1.0",
    "react-error-boundary": "^4.0.11",
    "vitest": "^0.34.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npx vitest run"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "npm run format:fix"
  }
}
